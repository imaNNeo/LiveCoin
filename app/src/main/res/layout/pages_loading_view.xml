<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/pl_size"
    android:layout_height="@dimen/pl_size"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_bg_primarydark_stoke_primary"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    >

    <com.base.baseproject.viewhelper.widget.AppProgressView
        android:layout_width="@dimen/pl_progressSize"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:pv_autostart="true"
        app:pv_circular="true"
        app:pv_progressMode="indeterminate"
        app:pv_progressStyle="@style/AppProgressStyleAccent"
        android:layout_gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:visibility="visible"
        android:layout_marginTop="@dimen/size1x"
        />

    <com.base.baseproject.viewhelper.widget.AppTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/please_wait"
        android:textColor="@color/colorAccent"
        android:textSize="12sp"
        android:layout_marginBottom="@dimen/size1.5x"
        android:layout_marginTop="@dimen/size0.5x"
        />

</LinearLayout>