<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/pie_width"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_bg_primarydark_stoke_primary"
    android:layout_gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >


        <com.base.baseproject.viewhelper.widget.AppImageView
            android:id="@+id/iv_image"
            android:layout_width="@dimen/pie_image_size"
            android:layout_height="@dimen/pie_image_size"
            app:srcCompat="@drawable/ic_error_outline_white"
            android:tint="@color/error_red"
            android:layout_marginTop="@dimen/size1.5x"
            />

        <com.base.baseproject.viewhelper.widget.AppTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/system_error"
            android:textColor="@color/error_red"
            android:textSize="18sp"
            android:layout_marginBottom="@dimen/size1x"
            android:layout_marginTop="@dimen/size0.5x"
            />

        <com.base.baseproject.viewhelper.widget.AppTextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsum lorem ipsumlorem ipsum"
            android:gravity="center_horizontal"
            android:layout_marginLeft="@dimen/size1x"
            android:layout_marginRight="@dimen/size1x"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/size1.5x"
            />

        <com.base.baseproject.viewhelper.widget.AppButton
            android:id="@+id/btn_tryAgain"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/try_again"
            android:layout_marginBottom="@dimen/size2x"
            android:textSize="12sp"
            />

    </LinearLayout>

    <com.base.baseproject.viewhelper.widget.AppImageView
        android:id="@+id/iv_close"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:srcCompat="@drawable/ic_close_white"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:tint="@color/error_red"
        android:padding="4dp"
        android:layout_margin="4dp"
        android:background="?selectableItemBackgroundBorderless"
        />
</RelativeLayout>
