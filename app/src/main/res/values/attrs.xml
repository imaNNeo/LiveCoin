    <declare-styleable name="AppTextView">
        <attr name="tv_font" format="string" />
    </declare-styleable>

    <declare-styleable name="AppEditText">
        <attr name="et_font" format="string" />
        <attr name="et_hint_small_size" format="integer" />
    </declare-styleable>

    <declare-styleable name="AppButton">
        <attr name="btn_font" format="string" />
        <attr name="btn_style" format="enum" >
            <enum name="White" value="0"/>
            <enum name="Black" value="1"/>
            <enum name="Orange" value="2"/>
            <enum name="Gray" value="3"/>
            <enum name="Blue" value="4"/>
        </attr>
    </declare-styleable>

</resources>
